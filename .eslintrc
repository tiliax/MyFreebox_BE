{
    "parser": "@typescript-eslint/parser",
    "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": [2, "always"],
        "prettier/prettier": ["error"]
    },
    "env": { "commonjs": true, "node": true, "es6": true }
}
